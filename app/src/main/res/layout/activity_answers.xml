<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button"
        android:layout_width="152dp"
        android:layout_height="58dp"
        android:background="@drawable/custom_button"
        android:onClick="answerbutton"
        android:text="add answer"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/answertext"
        app:layout_constraintTop_toBottomOf="@+id/questionPicture" />

    <Button
        android:id="@+id/questionPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/uploadscreen_picture_button"
        android:onClick="answerview"
        android:text="+ pÄ±cture"
        app:layout_constraintStart_toStartOf="@+id/answertext"
        app:layout_constraintTop_toBottomOf="@+id/answertext" />

    <ImageView
        android:id="@+id/answerview"
        android:layout_width="326dp"
        android:layout_height="136dp"
        android:layout_marginTop="158dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aaaaaa" />

    <EditText
        android:id="@+id/answertext"
        android:layout_width="326dp"
        android:layout_height="160dp"
        android:ems="10"
        android:hint="Your Answer"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/answerview"
        app:layout_constraintStart_toStartOf="@+id/answerview"
        app:layout_constraintTop_toBottomOf="@+id/answerview" />

</androidx.constraintlayout.widget.ConstraintLayout>